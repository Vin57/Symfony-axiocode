{% extends 'product/_base.html.twig' %}

{% block title %}Product{% endblock %}

{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>
                    {% set categories = product.categories %}
                    {% include 'product/component/c_categories.html.twig' %}
                </td>
            </tr>
            <tr>
                <th>Images</th>
                <td>
                    {% set pictures = product.pictures %}
                    {% include 'product/component/c_pictures.html.twig' %}
                </td>
            </tr>
            <tr>
                <th>Opinions</th>
                <td>
                    {% set opinions = product.opinions %}
                    {% set product_id = product.id %}
                    {% include 'product/component/c_opinions.html.twig' %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('product_edit', {'id': product.id}) }}">edit</a>
        {{ include('product/form/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}